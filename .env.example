# Configuration du serveur
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# WhatsApp Business API
WHATSAPP_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_VERSION=v18.0

# Base de donn√©es PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/whatsapp_agent?schema=public"

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenRouter Configuration (Multi-model AI API)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-3.5-turbo
OPENROUTER_MAX_TOKENS=1000
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_SITE_URL=https://your-domain.com
OPENROUTER_SITE_NAME=WhatsApp Intelligent Agent

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Sentry (Monitoring d'erreurs)
SENTRY_DSN=your_sentry_dsn_here

# Configuration NLP
NLP_CONFIDENCE_THRESHOLD=0.7
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# Configuration des tickets
TICKET_AUTO_ASSIGN=true
TICKET_ESCALATION_TIMEOUT=1800
MAX_CONVERSATION_DURATION=3600

# Notifications
NOTIFICATION_ENABLED=true
EMAIL_SERVICE_API_KEY=your_email_service_key
SMS_SERVICE_API_KEY=your_sms_service_key

# Configuration des agents humains
HUMAN_AGENT_AVAILABLE_HOURS=09:00-18:00
HUMAN_AGENT_TIMEZONE=Europe/Paris
AUTO_HANDOFF_KEYWORDS=agent,humain,personne,help,aide

# Backup et maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
CLEANUP_OLD_MESSAGES_DAYS=90